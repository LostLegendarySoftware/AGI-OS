      "lightweight",
      "local_chain"
    ]
  },
  "template_structure": {
    "wake_passport_template": {
      "user_id": "string - Unique user identifier",
      "identity_hash": "string - SHA256 hash of user identity data",
      "credentials": [
        {
          "id": "string - Unique credential identifier (UUID)",
          "type": "enum - user_identity|system_access|api_token|blockchain_wallet|biometric_data|role_permission",
          "user_id": "string - Associated user identifier",
          "data": {
            "description": "object - Credential-specific data structure",
            "examples": {
              "user_identity": {
                "name": "string",
                "email": "string",
                "public_key": "string - RSA public key PEM format",
                "identity_verification": "object"
              },
              "system_access": {
                "access_level": "string",
                "allowed_modules": "array",
                "restrictions": "object"
              },
              "api_token": {
                "token_hash": "string",
                "scope": "array",
                "rate_limits": "object"
              },
              "blockchain_wallet": {
                "wallet_address": "string",
                "public_key": "string",
                "supported_currencies": "array"
              },
              "biometric_data": {
                "biometric_hash": "string - Hashed biometric template",
                "biometric_type": "string - fingerprint|face|voice|iris",
                "verification_threshold": "number"
              },
              "role_permission": {
                "role_name": "string",
                "permissions": "array",
                "hierarchy_level": "number"
              }
            }
          },
          "permissions": [
            "string - Array of permission strings"
          ],
          "created_at": "string - ISO 8601 datetime",
          "expires_at": "string|null - ISO 8601 datetime or null for permanent",
          "blockchain_hash": "string|null - Blockchain transaction hash",
          "verification_status": "enum - pending|verified|revoked|expired",
          "encryption_key_id": "string|null - Reference to encryption key"
        }
      ],
      "permissions": {
        "description": "object - Hierarchical permission structure",
        "basic_access": "boolean - Basic system access",
        "advanced_features": "boolean - Advanced feature access",
        "admin_privileges": "boolean - Administrative privileges",
        "blockchain_operations": "boolean - Blockchain transaction permissions",
        "credential_management": "boolean - Manage other credentials",
        "system_configuration": "boolean - Modify system settings",
        "plugin_management": "boolean - Install/manage plugins",
        "user_management": "boolean - Manage other users",
        "audit_access": "boolean - Access audit logs",
        "emergency_override": "boolean - Emergency system override",
        "custom_permissions": {
          "description": "object - Custom permission definitions",
          "example": {
            "module_specific_access": "boolean",
            "feature_flags": "object",
            "resource_quotas": "object"
          }
        }
      },
      "blockchain_addresses": {
        "description": "object - Blockchain wallet addresses by platform",
        "ethereum": "string - Ethereum wallet address",
        "bitcoin": "string - Bitcoin wallet address",
        "local_chain": "string - Local blockchain address",
        "custom_chains": "object - Additional blockchain addresses"
      },
      "transaction_history": [
        {
          "transaction_id": "string - Unique transaction identifier",
          "type": "enum - credential_storage|credential_verification|permission_grant|permission_revoke",
          "timestamp": "number - Unix timestamp",
          "block_hash": "string - Blockchain block hash",
          "details": {
            "description": "object - Transaction-specific details",
